{% extends 'base.html.twig' %}

{% block title %}{{ 'nav.register'|trans|capitalize }}{% endblock %}

{% block body %}
    <div class="h-screen flex flex-col md:flex-row">
        <div class="flex pt-48 md:pt-0 w-full md:w-1/2 bg-gradient-to-tr from-secondary to-primary i justify-around items-center">
            <div class="px-10">
                <h1 class="text-white font-bold text-4xl font-sans">Inscription</h1>
                <p class="text-white text-2xl mt-3">Vous voulez partager des sources sur le site et en faire profiter d'autres développeurs ?</p>
                <a href="#" class="block mt-10 text-end text-white mb-2">Politique de confidentialité de vos données personnelles</a>

                <img class="max-h-[300px] mt-10" src="{{ asset('/build/images/undraw_bg4.svg') }}" alt="" />
            </div>
        </div>

        <div class="flex w-full pt-24 md:pt-0 md:w-1/2 justify-center items-center bg-white">
            {% for message in app.flashes('error') %}
                <div class="alert alert-error">
                    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                    <span>{{ message }}</span>
                </div>
            {% endfor %}

            {{ form_start(form, { 'attr' : {'class' : 'bg-white'} }) }}

            <div class="w-full flex justify-center">
                <h1 class="text-neutral-800 font-bold text-3xl mb-3">Bienvenue sur le site!</h1>
            </div>

            {{ form_label(form.email) }}
            {% if form_errors(form.email) %}
            <span class="text-accent text-sm">{{ form_errors(form.email) }}</span>
            {% endif %}
            <div class="relative mb-6">
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                    <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path></svg>
                </div>
                {{ form_widget(form.email) }}
            </div>

            {{ form_label(form.username) }}
            {% if form_errors(form.username) %}
            <span class="text-accent text-sm">{{ form_errors(form.username) }}</span>
            {% endif %}
            <div class="relative mb-6">
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         height="1em"
                         viewBox="0 0 448 512">
                        <style>svg{fill:#c0bfbc}</style>
                        <path d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z"/>
                    </svg>
                </div>
                {{ form_widget(form.username) }}
            </div>

            {{ form_label(form.password) }}
            {% if form_errors(form.password) %}
            <span class="text-accent text-sm">{{ form_errors(form.password) }}</span>
            {% endif %}
            <div class="relative mb-6">
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         class="h-5 w-5 text-gray-400"
                         viewBox="0 0 20 20"
                         fill="currentColor">
                        <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                    </svg>
                </div>
                {{ form_widget(form.password) }}
            </div>

            {{ form_label(form.password_repeat) }}
            {% if form_errors(form.password_repeat) %}
            <span class="text-accent text-sm">{{ form_errors(form.password_repeat) }}</span>
            {% endif %}
            <div class="relative mb-6">
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         class="h-5 w-5 text-gray-400"
                         viewBox="0 0 20 20"
                         fill="currentColor">
                        <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                    </svg>
                </div>
                {{ form_widget(form.password_repeat) }}
            </div>

            {{ form_rest(form) }}

            <button type="submit"
                    class="block w-full bg-secondary hover:bg-primary mt-4 py-2 rounded-2xl text-white mb-4">S'inscrire</button>

            <div class="flex justify-end w-full">
                <span class="text-end text-sm ml-2 bg-transparent hover:bg-primary hover:text-white text-neutral-400 transform p-1 -skew-y-6 inline-flex"><a class="transform skew-y-6 mx-3" href="#">Mot de passe oublié ?</a></span>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}